
@model List<SanTsgProject.Application.Models.Hotels>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Hotel Name</th>
            <th>Hotel Id</th>
            <th>Stars</th>
            <th>Rating</th>
            <th>Price</th>
            <th>  </th>
            <th>  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
         <tr>
             
             <td>@item.HotelName</td>
             <td>@item.Id</td>
             <td>@item.Stars</td>
             <td>@item.Rating</td>
             <td>@item.Price EUR</td>
             
             <td><a asp-controller="ShowDetails" asp-action="Index" asp-route-id="@item.Id">Details</a></td>
             <td><a asp-controller="Booking" asp-action="Index" asp-route-id="@item.OfferId">Booking</a></td>
         </tr>   
        }
    </tbody>
</table>