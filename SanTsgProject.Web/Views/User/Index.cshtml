@model List<SanTsgProject.Domain.Users.User>

    <h1 class="mb-3 row">Users</h1>
    <table class="table table-hover">
        <thead>
            <th>User Name</th>
            <th>Email</th>
            <th>Date Of Registration</th>
            <th>State</th>
            <th>  </th>
            <th>  </th>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.CreationDate</td>
                @if (@user.isActive == true)
                {
                    <td>Active</td>
                }
                else
                {
                    <td>Passive</td>
                }
                
                <td><a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
                <td><a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a></td>
            </tr>
        }
        </tbody>
    </table>
